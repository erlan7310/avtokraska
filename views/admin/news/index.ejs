<div class="container-fluid">
  <div class="card mb-3">
    <div class="card-header">
      <div style="display: flex; align-items: center; justify-content: space-between;">
				<span><i class="fa fa-newspaper-o"></i> Новости</span>
				<div>
					<a class="btn btn-primary" href="/admin/news/add" role="button">Добавить</a>
				</div>
			</div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Заголовок</th>
              <th>Фотография</th>
              <th>Кто создал</th>
              <th>Время изменения</th>
              <th></th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Заголовок</th>
              <th>Фотография</th>
              <th>Кто создал</th>
              <th>Время изменения</th>
              <th></th>
            </tr>
          </tfoot>
          <tbody>
            <% news.forEach(elem => { %>
              <tr>
                <td><%= elem.title %></td>
                <td><img width="100px" src="<%= elem.previewPhoto %>" /></td>
                <td><%= `${elem.user.surname} ${elem.user.name}` %></td>
                <td><%= (elem.updatedAt === null ? elem.createdAt : elem.updatedAt).toLocaleString('ru-RU') %></td>
                <td>
                  <div class="dropdown">
										<button type="button" class="btn btn-link" id="newsDropdownMenu" data-toggle="dropdown"
											aria-haspopup="true" aria-expanded="false">
											<i class="fa fa-bars" aria-hidden="true"></i>
										</button>
										<div class="dropdown-menu" aria-labelledby="newsDropdownMenu">
											<a class="dropdown-item" href="/admin/news/edit/<%= elem.id %>">Редактировать</a>
											<a class="dropdown-item" href="/admin/news/delete/<%= elem.id %>">Удалить</a>
										</div>
									</div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>