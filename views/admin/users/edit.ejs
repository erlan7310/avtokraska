<div class="container-fluid">
  <div class="card mb-3">
    <div class="card-header">
      <div style="display: flex; align-items: center; justify-content: space-between;">
        <span><i class="fa fa-users"></i> Редактирование пользователя</span>
        <div>
        </div>
      </div>
    </div>
    <div class="card-body">
      <form class="needs-validation" novalidate method="POST" action="/admin/users/edit/<%= user.id %>">
        <div class="form-group">
          <label for="surname"><span style="color: red;">*</span> Фамилия</label>
          <input value="<%= user.surname %>" type="text" class="form-control" id="surname" name="surname" required>
          <div class="invalid-feedback">
            Введите фамилию
          </div>
        </div>
        <div class="form-group">
          <label for="name"><span style="color: red;">*</span> Имя</label>
          <input value="<%= user.name %>" type="text" class="form-control" id="name" name="name" required>
          <div class="invalid-feedback">
            Введите имя
          </div>
        </div>
        <div class="form-group">
          <label for="patronymic">Отчество</label>
          <input value="<%= user.patronymic %>" type="text" class="form-control" id="patronymic" name="patronymic">
        </div>
        <div class="form-group">
          <div class="form-row">
            <div class="col">
              <button id="generateLoginPassBtn" type="button" class="btn btn-secondary" style="width: 100%;">Сгенерировать логин/пароль</button>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="username"><span style="color: red;">*</span> Имя пользователя</label>
          <input value="<%= user.username %>" type="text" class="form-control" id="username" name="username" required>
          <div class="invalid-feedback">
            Введите имя пользователя
          </div>
        </div>
        <div class="form-group">
          <label for="role"><span style="color: red;">*</span> Роль</label>
          <select name="roleId" id="role" class="form-control">
            <% roles.forEach(role => { %>
              <option value="<%= role.id %>" <%= user.roleId === role.id ? 'selected' : '' %>><%= role.name %></option>
            <% }) %>
          </select>
          <div class="invalid-feedback">
            Выберите роль
          </div>
        </div>
        <button class="btn btn-primary" type="submit">Сохранить</button>
      </form>
    </div>
  </div>
</div>