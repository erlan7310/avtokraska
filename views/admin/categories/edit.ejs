<div class="container-fluid">
  <div class="card mb-3">
    <div class="card-header">
      <div style="display: flex; align-items: center; justify-content: space-between;">
        <span><i class="fa fa-table"></i> Добавление категории</span>
        <div>
        </div>
      </div>
    </div>
    <div class="card-body">
      <form class="needs-validation" novalidate method="POST" action="/admin/categories/edit/<%= category.id %>">
        <div class="form-group">
          <label for="name"><span style="color: red;">*</span> Название категории</label>
          <input value="<%= category.name %>" type="text" class="form-control" id="name" name="name" required>
          <div class="invalid-feedback">
            Введите название категории
          </div>
        </div>
        <div class="form-group">
          <div class="form-check">
            <input <%= category.parentId ? 'checked' : '' %> class="form-check-input" type="checkbox" id="subcategoryCheckbox">
            <label class="form-check-label" for="subcategoryCheckbox">
              Подкатегория
            </label>
          </div>
        </div>
        <div class="form-group">
          <label for="parent"><span style="color: red;">*</span> Основная категория</label>
          <select <%= category.parentId ? '' : 'disabled' %> name="parentId" id="parent" class="form-control">
            <option value="0" selected>Выбрать</option>
            <% categories.forEach(categoryOp => { %>
              <option value="<%= categoryOp.id %>" <%= category.parentId === categoryOp.id ? 'selected' : '' %>><%= categoryOp.name %></option>
            <% }) %>
          </select>
          <div class="invalid-feedback">
            Выберите основную категорию
          </div>
        </div>
        <button class="btn btn-primary" type="submit">Отправить</button>
      </form>
    </div>
  </div>
</div>